{
   "tool": "partio",
   "platforms": ["darwin", "windows", "linux"],
   "environment":
   {
      "PARTIO_ROOT": {"strict": True, "common": "@path/@tool/@version/@platform"},
      "PATH": "${PARTIO_ROOT}/bin"
   },
   "optional":
   {
      "python":
      {
         "PYTHONPATH": "${PARTIO_ROOT}/lib/python/${PYTHON_VERSION}"
      },
      "maya":
      {
         "MAYA_PLUG_IN_PATH": "${PARTIO_ROOT}/maya/${MAYA_VERSION}/plug-ins",
         "MAYA_SCRIPT_PATH": "${PARTIO_ROOT}/maya/${MAYA_VERSION}/scripts",
         "MAYA_SHELF_PATH": "${PARTIO_ROOT}/maya/${MAYA_VERSION}/scripts",
         "XBMLANGPATH": {"common": "${PARTIO_ROOT}/maya/${MAYA_VERSION}/icons",
                         "linux": "${PARTIO_ROOT}/maya/${MAYA_VERSION}/icons/%B"}
      },
      "devel":
      {
         "PARTIO_INCLUDE": {"strict": True, "common": "${PARTIO_ROOT}/include"},
         "PARTIO_LIB": {"strict": True, "common": "${PARTIO_ROOT}/lib"}
      }
   }
}