/// using the same  callback for all partio4Maya nodes AE templates
global proc int pioAEassignCacheFileCB( string $fileAttribute,
										string $fileName,
										string $fileType )
{
	string $components[];
  	tokenize $fileAttribute "." $components;
  	string $nodeName = $components[0];

  	string $fileNameComp[];

	string $baseFileName = basename($fileName,"");
	print $baseFileName;

	string $fileParts[] = `partioGetBaseFileName($baseFileName)`;
	string $fileBaseName = $fileParts[0];
	int $pad = $fileParts[4];
	string $ext = $fileParts[3];

	setAttr ($nodeName + ".cachePrefix") -type "string" $baseFileName;

	float $dv[] = `attributeQuery -node $nodeName -listDefault "cacheFormat"`;
	int $extIndex = int($dv[0]);

	string $el[] = `attributeQuery -node $nodeName -listEnum "cacheFormat"`;
	string $exts[];
	int $i, $n = `tokenize $el[0] ":" $exts`;
	for ($i=0; $i<$n; $i++)
	{
		if (tolower($exts[$i]) == $ext || $exts[$i] == $ext)
		{
			$extIndex = $i;
			break;
		}
	}
   
// if padding is not -1 we have a number in the file name otherwise we want to use static cache
	if ($pad >=0)
	{
		setAttr ($nodeName + ".staticCache") 0;
	}
	else
	{
		setAttr ($nodeName + ".staticCache") 1;
	}

	if ($ext == "pdc")
	{
		$pad = 0;
	}

	else if ($ext == "mc")
	{
		$pad = 0;
	}
	else if ($ext == "pts" || $ext == "xyz")
	{
		$pad = 0;
	}

	setAttr ($nodeName + ".cacheFormat") $extIndex;

	$fileName = substituteAllString($fileName, basename($fileName, ""), "");
  	setAttr $fileAttribute -type "string" $fileName;

	// This will force an update to display the effects
	// of the new cachefile.
	//
	currentTime `currentTime -q`;

  string $currentDir = `workspace -q -dir`;
  retainWorkingDirectory ($currentDir);

  return true;
}

global proc pioAEcacheFileBrowser( string $cmd, string $cacheName )
{
    string  $workspace = `workspace -q -fn`;
    setWorkingDirectory $workspace "diskCache" "data";

    fileBrowser ($cmd, "Partio Cache Directory", "", 0);
}

global proc string pioStripNodeName (string $nodeName)
{
	string $buffer[];
	tokenize $nodeName "." $buffer;
	return $buffer[0];
}

global proc pioAEoutpathReplace(string $cacheName)
{
	string $fileName = `getAttr $cacheName`;
	string	$buffer[];
	tokenize($cacheName, ".", $buffer);
	string	$nodeName = $buffer[0];

	// Filename Attribute
  connectControl diskNameField $cacheName;
  string $command = "pioAEassignCacheFileCB " + " " + $cacheName;
  button -e -c ("pioAEcacheFileBrowser \"" + $command + "\" " + $nodeName ) browser;
}

global proc pioAEoutpathNew(string $cacheName)
{
	setUITemplate -pst attributeEditorTemplate;
		columnLayout -adj true;
			rowLayout -nc 3 outpathLayout;
        		text -label "Particle Path" outpathText;
		        textField diskNameField;
		            symbolButton -image "navButtonBrowse.png" browser;
				setParent ..;

		setParent ..;

	setUITemplate -ppt;
	setParent ..;

	pioAEoutpathReplace( $cacheName );
}

global proc attachPartioInstancerToInstancer()
{
	string $sel[] =`ls -sl`;
	string $inst;
	string $partio;

	for ($s in $sel)
	{
		if (`nodeType $s` == "transform")
		{
			string $shape[] = `listRelatives -s $s`;
			$s = $shape[0];
		}
		if (`nodeType $s` == "instancer")
		{
			$inst = $s;
		}
		else if (`nodeType $s` == "partioInstancer")
		{
			$partio = $s;
		}
	}

	if (`size $inst` && `size $partio`)
	{
		connectAttr -f ($partio + ".instanceData") ($inst+".inputPoints");
	}
}

global proc string pioGetParticles(int $warn)
{
	string $target = "";
    string $sel[] = `ls -selection`;
    
    if (size($sel) == 0)
    {
        if ($warn == 1)
        {
            warning("Please select a nParticle shape");
        }
        return "";
    }
    else if (size($sel) > 1)
    {
        if ($warn == 1)
        {
            warning("Please select a single shape");
        }
        return "";
    }
    else
    {
        string $ntype = `nodeType $sel[0]`;
        if ($ntype == "nParticle")
        {
            $target = $sel[0];
        }
        else if ($ntype == "transform")
        {
            string $children[] = `listRelatives -children -shapes -noIntermediate -path -type "nParticle" $sel[0]`;
            if (size($children) == 0)
            {
                if ($warn == 1)
                {
                    warning("No nParticle shape under " + $sel[0]);
                }
                return "";
            }
            else if (size($children) > 1)
            {
                if ($warn == 1)
                {
                    warning("More that one nParticle shape under " + $sel[0]);
                }
                return "";
            }
            else
            {
                $target = $children[0];
            }
        }
    }

    return $target;
}

global proc string pioGetFormatFilters()
{
    string $ff = "";
    string $fmts[] = `partioExport -query -format`;
    int $nfmt = size($fmts);
    int $ifmt = 0;
    
    while ($ifmt < $nfmt && size($fmts[$ifmt]) == 0)
    {
        $ifmt++;
    }

    if ($ifmt < $nfmt)
    {
        $ff = $fmts[$ifmt];
        $ifmt++;
        for (; $ifmt<$nfmt; $ifmt++)
        {
            if (size($fmts[$ifmt]) <= 0)
            {
                continue;
            }
            $ff += ";;";
            $ff += `toupper $fmts[$ifmt]` + " Files (*." + $fmts[$ifmt] + ")";
        }   
    }

    return $ff;
}

global proc string attachPartioCacheEx(string $path, string $fmt, string $target)
{
    string $dirname = `dirname $path`;
    string $filename = `basename $path ("."+$fmt)`;

    string $piofmt = "partio-" + $fmt;

    string $tmp[];
    int $n = `tokenize $filename "." $tmp`;

    string $basename = $tmp[0];
    for ($i=1; $i<$n-2; $i++)
    {
        $basename += "." + $tmp[$i];
    }

    if ($target == "")
    {
        string $trsh[] = `nParticle`;
        setAttr ($trsh[1]+".isDynamic") 0;
        partioImport -aa -p $trsh[1] $path;
    }

	string $cache = `cacheFile -directory $dirname
                               -fileName $basename
                               -cacheFormat $piofmt
                               -format "OneFilePerFrame"
                               -attachFile
                               -inAttr ($target+".positions")`;
    connectAttr ($cache+".inRange") ($target+".playFromCache");
    connectAttr ($cache+".outCacheArrayData") ($target+".cacheArrayData");
    return $cache;
}

global proc string createPartioCache()
{
    string $target = pioGetParticles(1);
    if ($target == "")
    {
        return "";
    }

    string $ff = pioGetFormatFilters();
    if ($ff == 0)
    {
        warning("No available format for PartIO");
        return "";
    }

    string $result[] = `fileDialog2 -fileMode 0 -caption "Output PartIO cache file" -fileFilter $ff -returnFilter true`;

    if (size($result) > 0)
    {
        string $tmp[];
        int $n = `tokenize $result[size($result)-1] " " $tmp`;
        string $fmt = `tolower $tmp[0]`;
        
        string $dirname = `dirname $result[0]`;
        string $filename = `basename $result[0] ("."+$fmt)`;

        $piofmt = "partio-" + $fmt;

        $n = `tokenize $filename "." $tmp`;

        string $basename = $tmp[0];
        for ($i=1; $i<$n-2; $i++)
        {
            $basename += "." + $tmp[$i];
        }

        // UI for this?
        float $startTime = `playbackOptions -q -animationStartTime`;
        float $endTime = `playbackOptions -q -animationEndTime`;
        float $rate = 1;
        float $mult = 1;
        
        // Note: Simulation Rate * Sample Multiplier == Sample(s) per frame

        cacheFile -directory $dirname -fileName $basename -cacheFormat $piofmt -format "OneFilePerFrame"
                  -startTime $startTime -endTime $endTime -simulationRate $rate -sampleMultiplier $mult
                  -cacheableNode $target;
        
        return attachPartioCacheEx($result[0], $fmt, $target);
    }
    else
    {
        return "";
    }
}

global proc string attachPartioCache()
{
    string $target = pioGetParticles(0);
    
    string $ff = pioGetFormatFilters();
    if ($ff == 0)
    {
        warning("No available format for PartIO");
        return "";
    }

    string $result[] = `fileDialog2 -fileMode 1 -caption "Select PartIO cache file" -fileFilter $ff -returnFilter true`;

    if (size($result) > 0)
    {
        string $tmp[];
        int $n = `tokenize $result[size($result)-1] " " $tmp`;
        string $fmt = `tolower $tmp[0]`;
        
        return attachPartioCacheEx($result[0], $fmt, $target);
    }
    else
    {
    	return "";
    }
}

